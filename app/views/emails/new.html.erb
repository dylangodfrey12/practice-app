<% provide(:title, 'Contact') %>
<h1>Contact</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@email) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :phone %>
      <%= f.number_field :phone %>

        <%= f.label :content %>
      <%= f.text_area :content, size: "60x12" %>

      <%= f.submit "Get Quote", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>